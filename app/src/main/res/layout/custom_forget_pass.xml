<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edtMatKhauMoi_forget"
        android:layout_width="match_parent"
        android:hint="@string/hint_pass_word"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:id="@+id/edtReMatKhauMoi_forget"
        android:layout_width="match_parent"
        android:hint="@string/hint_repassword"
        android:layout_height="wrap_content"></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnDoiMatKhau_forget"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Đổi mật khẩu"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/btnHuy_forget"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Hủy"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

</LinearLayout>